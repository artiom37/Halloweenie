{
  "manifest_version": 3,
  "name": "Halloweenie",
  "description": "Collection of Halloween pictures",
  "version": "1.0.0",
  "action": {
    "default_title": "Click Me",
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "48": "icon48.png"
  },
  "permissions": [
    "tabs", 
    "bookmarks"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"  
}